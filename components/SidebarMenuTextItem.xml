<component name="SidebarMenuTextItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" />
        <field id="focusPercent" type="float" onChange="onFocusChange" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/SidebarMenuTextItem.brs" />

    <children>
        <Group id="container">
            <Rectangle
                id="bg"
                width="210"
                height="54"
                color="#1A1A1A"
                opacity="0.0" />

            <MarqueeLabel
                id="title"
                translation="[12, 10]"
                maskWidth="186"
                maskHeight="34"
                font="font:SmallBoldSystemFont"
                color="#999999" />
        </Group>
    </children>
</component>
